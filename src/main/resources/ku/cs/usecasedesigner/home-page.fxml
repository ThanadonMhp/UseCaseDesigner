<VBox fx:id="homePageVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.usecasedesigner.controller.HomePageController">

  <children>
    <MenuBar style="-fx-background-color: #e2f3e2;" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleNewMenuItem" text="New" />
            <MenuItem mnemonicParsing="false" onAction="#handleOpenMenuItem" text="Open…" />
            <MenuItem mnemonicParsing="false" onAction="#handleSaveMenuItem" text="Save" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#handlePreferenceMenuItem" text="Preference" />
          </items>
        </Menu>
        <Menu disable="true" mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu disable="true" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <TitledPane fx:id="componentsPane" animated="false" collapsible="false" layoutX="14.0" layoutY="15.0" prefHeight="664.0" prefWidth="202.0" text="Components" textAlignment="CENTER">
          <content>
            <AnchorPane fx:id="ComponentAnchor" minHeight="0.0" minWidth="0.0" prefHeight="547.0" prefWidth="200.0" styleClass="component-colour">
              <children>
                <!-- ImageView for oval.jpg with drag-and-drop functionality -->
                <ImageView fx:id="ovalImageView" fitHeight="90.0" fitWidth="90.0" layoutX="5.0" layoutY="5.0" onDragDetected="#ovalDragDetected" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../images/oval.png" />
                  </image>
                </ImageView>
                <ImageView fx:id="actorImageView" fitHeight="90.0" fitWidth="90.0" layoutX="105.0" layoutY="5.0" onDragDetected="#actorDragDetected" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../images/human.png" />
                  </image>
                </ImageView>
                <ImageView fx:id="systemImageView" fitHeight="90.0" fitWidth="90.0" layoutX="5.0" layoutY="100.0" onDragDetected="#systemDragDetected" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../images/box.png" />
                  </image>
                </ImageView>
                <ImageView fx:id="lineImageView" fitHeight="90.0" fitWidth="90.0" layoutX="105.0" layoutY="100.0" onDragDetected="#lineDragDetected" onMouseClicked="#lineMouseClicked" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../images/line.png" />
                  </image>
                </ImageView>
                <ImageView fx:id="arrowImageView" fitHeight="90.0" fitWidth="90.0" layoutX="5.0" layoutY="195.0" onDragDetected="#arrowDragDetected" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../images/directional.png" />
                  </image>
                </ImageView>
              </children>
            </AnchorPane>
          </content>
          <font>
            <Font name="Noto Sans Thai Regular" size="12.0" />
          </font>
        </TitledPane>
        <Pane fx:id="designPane" layoutX="233.0" layoutY="15.0" onDragDropped="#paneDragDropped" onDragOver="#paneDragOver" onMouseClicked="#designPaneMouseClicked" prefHeight="664.0" prefWidth="1027.0" styleClass="bg-colour">

          <children>
            <Label fx:id="guideLabel" alignment="CENTER" layoutX="14.0" layoutY="14.0" style="&#10;" styleClass="noto-sans-thai" text="Drag components from Library here…" textAlignment="CENTER" textFill="#34d399" wrapText="false">
              <font>
                <Font size="18.0" />
              </font>
            </Label>
          </children></Pane>
      </children>
    </AnchorPane>
  </children>
</VBox>
