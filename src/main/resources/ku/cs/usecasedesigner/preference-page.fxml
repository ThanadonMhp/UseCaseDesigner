<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.usecasedesigner.controller.PreferencePageController">
    <children>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Label text="Setting" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <VBox spacing="10">
                    <Label text="ThemeApp" style="-fx-font-size: 18px;" />
                    <RadioButton fx:id="lightThemeRadioButton" text="Light" selected="true" />
                    <RadioButton fx:id="darkThemeRadioButton" text="Dark" />

                </VBox>
                <VBox spacing="10">
                    <Label text="Text formatting" style="-fx-font-size: 18px;" />
                    <HBox spacing="10">
                        <Label text="Fonts" />
                        <ComboBox fx:id="fontComboBox">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="LINE Seed Sans TH App" />
                                    <String fx:value="Arial" />
                                    <String fx:value="Tahoma" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="fontSize" />
                        <ComboBox fx:id="sizeComboBox">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="12" />
                                    <String fx:value="14" />
                                    <String fx:value="16" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>
                </VBox>
                <Button text="Save" onAction="#handleSaveButtonAction" />
            </children>
        </VBox>
    </children>
</AnchorPane>
